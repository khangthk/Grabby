{

	"manifest_version": 2,
	"name": "Download Grab",
	"description": "Grabs links of the files that you download as you browse and lets you download them with external tools.",
	"version": "0.2.12a",
	"author": "Pouria Pirhadi",
	"homepage_url": "https://github.com/pouriap/Firefox-DownloadGrab",

	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"downloads",
		"nativeMessaging",
		"clipboardWrite",
		"storage",
		"tabs",
		"menus",
		"<all_urls>"
	],

	"applications": {
		"gecko": {
			"id": "download_grab@pouria.p",
			"strict_min_version": "56.0"
		}
	},

	"icons": {
		"16": "icons/icon.svg",
		"32": "icons/icon.svg",
		"48": "icons/icon.svg",
		"64": "icons/icon.svg",
		"96": "icons/icon.svg"
	},

	"browser_action": {
		"default_popup": "popup/popup.html",
		"browser_style": true,
		"default_icon": {
			"16": "icons/icon.svg",
			"32": "icons/icon.svg",
			"48": "icons/icon.svg",
			"64": "icons/icon.svg",
			"96": "icons/icon.svg"
		}
	},

	"options_ui": {
		"page": "options/options.html",
		"browser_style": true
	},

	"background": {
		"scripts": [
			"libs/md5.js", 
			"options/default_options.js", 
			"classes.js", 
			"background.js"
		]
	}

}