{
	"manifest_version": 2,
	"name": "Grabby",
	"description": "Grabs links of the files that you download as you browse and lets you download them with external tools.",
	"version": "0.50.0",
	"version_name": "0.50.0 alpha",
	"author": "Pouria Pirhadi",
	"homepage_url": "https://github.com/pouriap/Grabby",

	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"downloads",
		"nativeMessaging",
		"clipboardWrite",
		"storage",
		"tabs",
		"contextMenus",
		"cookies",
		"notifications",
		"<all_urls>"
	],

	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},

	"browser_action": {
		"default_popup": "views/popup/popup.html",
		"browser_style": true,
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},

	"options_ui": {
		"page": "views/options_page/options.html",
		"browser_style": true
	},

	"background": {
		"scripts": [
			"libs/browser-polyfill.js",
			"libs/md5.js",
			"libs/m3u8-parser.js",
			"libs/mpd-parser.js",
			"scripts/constants.js",
			"scripts/classes.js",
			"scripts/log.js",
			"scripts/utils.js",
			"scripts/ui.js",
			"scripts/native_messaging.js",
			"scripts/context_menu.js",
			"scripts/request_filtering.js",
			"scripts/download_handler.js",
			"scripts/stream_handler.js",
			"scripts/youtube_handler.js",
			"scripts/special_site_handler.js",
			"scripts/tabs.js",
			"scripts/types.js",
			"scripts/options.js",
			"scripts/messaging.js",
			"scripts/browser_dms.js",
			"background.js"
		]
	}

}