{
	"manifest_version": 2,
	"name": "Download Grab",
	"description": "Grabs links of the files that you download as you browse and lets you download them with external tools.",
	"version": "0.12.0a",
	"author": "Pouria Pirhadi",
	"homepage_url": "https://github.com/pouriap/Firefox-DownloadGrab",

	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"downloads",
		"nativeMessaging",
		"clipboardWrite",
		"storage",
		"tabs",
		"menus",
		"cookies",
		"notifications",
		"<all_urls>"
	],

	"browser_specific_settings": {
		"gecko": {
			"id": "download_grab@pouria.p",
			"strict_min_version": "56.0",
			"update_url": "https://dlgrab.my.to/updates.json"
		}
	},

	"icons": {
		"16": "icons/icon.svg",
		"32": "icons/icon.svg",
		"48": "icons/icon.svg",
		"64": "icons/icon.svg",
		"96": "icons/icon.svg"
	},

	"browser_action": {
		"default_popup": "popup/popup.html",
		"browser_style": true,
		"default_icon": {
			"16": "icons/icon.svg",
			"32": "icons/icon.svg",
			"48": "icons/icon.svg",
			"64": "icons/icon.svg",
			"96": "icons/icon.svg"
		}
	},

	"options_ui": {
		"page": "options/options.html",
		"browser_style": true
	},

	"background": {
		"scripts": [
			"libs/md5.js",
			"libs/m3u8-parser.js",
			"libs/mpd-parser.js",
			"scripts/constants.js",
			"scripts/classes.js",
			"scripts/log.js",
			"scripts/utils.js",
			"scripts/ui.js",
			"scripts/native_messaging.js",
			"scripts/context_menu.js",
			"scripts/request_filtering.js",
			"scripts/download_handler.js",
			"scripts/stream_handler.js",
			"scripts/site_handlers.js",
			"scripts/tabs.js",
			"scripts/types.js",
			"scripts/options.js",
			"scripts/messaging.js",
			"scripts/browser_dms.js",
			"background.js"
		]
	}

}