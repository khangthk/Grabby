{
    "compilerOptions": {
		"outDir": "./dist",
		"allowJs": true,
		"target": "es2017",
		"lib": [ "es2017", "DOM" ],
		"strict": true,
		//"noImplicitAny": true,
		//"strictNullChecks": true,
		"strictPropertyInitialization": false,
		"noEmitOnError": false,
		"noEmit": false,
    },

    "include": [
        "./src/**/*.ts"
    ],

	"exclude": [
		"node_modules",
		"dist"
	],
